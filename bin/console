#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use Symfony\Component\Dotenv\Dotenv;
use Ojowbe\CombellCli\Command\CombellCommand;
use Ojowbe\CombellCli\Command\ListCombellCommands;

$dotenv = new Dotenv();
if (file_exists(__DIR__ . '/../.env')) {
    $dotenv->load(__DIR__ . '/../.env');
}

$app = new Application('Combell CLI', '1.0.0');

// âœ… Register both commands manually
$app->add(new CombellCommand());
$app->add(new ListCombellCommands());

$app->run();

